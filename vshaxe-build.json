{
    "mainTarget": "all",
    "haxelibs": [
        {
            "name": "hxargs",
            "installArgs": ["install", "hxargs"]
        },
        {
            "name": "json2object",
            "installArgs": ["git", "json2object", "https://github.com/elnabo/json2object"]
        },
        {
            "name": "hxnodejs",
            "installArgs": ["git", "hxnodejs", "https://github.com/HaxeFoundation/hxnodejs"]
        },
        {
            "name": "vscode",
            "installArgs": ["install", "vscode"]
        }
    ],
    "targets": [
        {
            "name": "all",
            "composite": true,
            "targetDependencies": [
                "run-script",
                "extension"
            ]
        },
        {
            "name": "run-script",
            "args": {
                "classPaths": ["src", "api"],
                "haxelibs": ["hxargs", "json2object"],
                "main": "vshaxeBuild.Main",
                "output": {
                    "target": "neko",
                    "path": "run.n"
                },
                "debug": true
            },
            "isBuildCommand": true
        },
        {
            "name": "extension",
            "args": {
                "classPaths": ["src", "api"],
                "haxelibs": ["hxargs", "json2object", "hxnodejs", "vscode"],
                "output": {
                    "target": "js",
                    "path": "extension.js"
                },
                "debug": true,
                "packageName": "vshaxeBuild.extension.Main"
            }
        }
    ]
}