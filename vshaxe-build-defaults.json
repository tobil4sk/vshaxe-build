{
    "haxelibs": [
        {
            "name": "hxnodejs",
            "installArgs": ["git", "hxnodejs", "https://github.com/HaxeFoundation/hxnodejs"]
        },
        {
            "name": "jstack",
            "installArgs": ["install", "jstack"]
        }
    ],
    "targets": [
        {
            "name": "empty"
        },
        {
            "name": "vshaxe-node",
            "debug": {
                "args": {
                    "defines": ["js_unflatten", "JSTACK_FORMAT=vscode"],
                    "haxelibs": ["jstack"]
                }
            },
            "args": {
                "haxelibs": ["hxnodejs"]
            }
        }
    ]
}